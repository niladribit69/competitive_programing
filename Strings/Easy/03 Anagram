bool isAnagram(string c, string d){
    
    // Your code here
    if(c.size()!=d.size()) return 0;
else
{
int f=1;
sort(c.begin(),c.end());
sort(d.begin(),d.end());
for(int i=0;i<c.size();i++) {if(c[i]!=d[i]) {
f=0;
break;
    
}}
    
 return f;


}
}
