class Solution {
  public:
       int RedOrGreen(int N,string S) {
           //code here
           int red=0;
           int green=0;
           for(int i=0;i<N;i++){
               if(S[i]=='G'){
                   green++;
               }
               else{
                   red++;
               }
           }
           if(green<red){
               return green;
           }
           else{
               return red;
           }
    }
};
